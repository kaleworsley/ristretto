  <% flash[:error] = form.error_messages :message => nil, :header_message => nil %>
  <% unless project.new_record? || !project.try(:has_stakeholder?, current_user) %>
  <div class="form-item form-item-block clearfix">
    <%= form.label :customer_id %>
    <div class="input">
      <%= form.collection_select :customer_id, Customer.all.sort_by(&:name), :id, :name %>
    </div>
  </div>
  <% end %>
  <div class="form-item form-item-block clearfix">
    <%= form.label :name %>
    <div class="input">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="form-item form-item-block clearfix">
    <%= form.label :state %>
    <div class="input">
      <%= form.select :state, Project.states_for_select %>
    </div>
  </div>

  <div class="form-item form-item-block clearfix">
    <%= form.label :kind %>
    <div class="input">
      <%= form.select :kind, Project.kinds_for_select %>
    </div>
  </div>

  <div class="form-item form-item-block clearfix">
    <%= form.label :fixed_price %>
    <div class="input">
      <%= form.check_box :fixed_price %>
    </div>
   </div>

  <div class="form-item form-item-block clearfix">
    <%= form.label :rate %>
    <div class="input">
      <div class="input-append">
        <%= form.text_field :rate, :size => 4 %><span class="add-on">$/hour</span>
      </div>
    </div>
  </div>

  <div class="form-item form-item-block clearfix">
    <%= form.label :estimate %>
    <div class="input">
      <%= form.text_field :estimate, :size => 4 %>
      <span class="help-block">Leave blank for no estimate</span>
    </div>
  </div>
