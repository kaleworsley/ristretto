<%- content_for :tabs do -%>
  <%= tab 'Projects', customer_projects_path(@customer) %>
  <%= tab 'New project', new_customer_project_path(@customer), true %>  
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb "Customers", customers_path %>
  <%= crumb @customer.name, @customer %>
  <%= crumb 'New project', new_customer_project_path(@customer) %>
<%- end -%>

<%= title "New project" -%>
<% form_for [@customer, @project] do |form| %>
<%= render :partial => form, :locals => {:form => form, :project => @project, :attachment => @attachment} %>
<% end %>
