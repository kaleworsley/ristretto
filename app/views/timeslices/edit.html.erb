<%- content_for :breadcrumbs do -%>
<% if @timeslice.timetrackable_type == 'Task' %>
  <%= crumb @timeslice.timetrackable.project.customer.name, @timeslice.timetrackable.project.customer %>
  <%= crumb @timeslice.timetrackable.project.name, @timeslice.timetrackable.project %>
  <%= crumb @timeslice.timetrackable.name, @timeslice.timetrackable %>
  <% unless @timeslice.description.blank? %>
    <%= crumb @timeslice.description, @timeslice %>
  <% else %>
    <%= crumb '(blank)', @timeslice %>
  <% end %>
  <% end %>
<%- end -%>

<%- content_for :tabs do -%>
    <%= tab 'View', @timeslice %>
<%- end -%>

<%= title "Editing timeslice" -%>

<% form_for @timeslice do |form| %>
  <%= render :partial => form, :locals => {:timeslice => @timeslice, :task => @task } %>
<% end %>
