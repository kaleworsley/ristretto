<div id="new_timeslice_wrapper" class="small">
<% form_tag timeslice_smart_create_path, {:id => 'new_timeslice'} do %>
  <div class="task-details">
      <%= hidden_field_tag 'return_to_task', true %>
      <%= hidden_field_tag 'timeslice[task_id]', task.id %>
    <div class="description">
      <%= text_field 'timeslice', 'description', :title => 'Description' %>
    </div>
  </div>
  <div class="time-details">
    <div class="chargeable">
      <%= label :timeslice, :chargeable, '$' %>
      <%= check_box 'timeslice', 'chargeable', {:checked => 'checked'} %>
    </div>
    <div class="started">
      <%= text_field 'timeslice', 'started_time', :minute_step => current_user.minute_step, :size => 4, :title => 'Started' %>
    </div>
    <div class="finished">
      <%= text_field 'timeslice', 'finished_time', :minute_step => current_user.minute_step, :size => 4, :title => 'Finished' %>
    </div>
    <%= submit_tag 'Add time', {:id => 'timeslice_submit'} %>
  </div>
<% end %>
</div>
