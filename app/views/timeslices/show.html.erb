<%- content_for :breadcrumbs do -%>
 <% unless @timeslice.description.blank? %>
    <%= crumb @timeslice.description, @timeslice %>
  <% else %>
    <%= crumb '(blank)', @timeslice %>
  <% end %>
<%- end -%>

<%- content_for :tabs do -%>
  <%= tab 'Edit', edit_timeslice_path(@timeslice) %>
<%- end -%>


<% present @timeslice do |t| %>

  <%= t.item :description, :description %>
  <%= t.item :date, :date %>
  <%= t.item :time, :time %>
  <% t.item :duration do %>
    <%= t.duration %>
  <% end %>
  <%= t.item :chargeable, :chargeable %>
<% end %>

