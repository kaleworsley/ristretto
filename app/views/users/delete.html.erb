<%- content_for :tabs do -%>
  <%= tab 'Edit', edit_user_path(@user) if can? :update, @user %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb 'Users', users_path if can? :index, User %>
  <%= crumb @user.full_name, @user %>
<% end %>

<%= title "Are you sure you want to continue?" -%>
This will delete user <%= link_to @user, @user %>.
<% form_for @user, :html => {:method => 'delete'} do |f| %>
  <%= submit_tag 'Delete' %> or <%= link_to 'Cancel', request.referer || @user, {:class => 'cancel'} %>
<% end %>

