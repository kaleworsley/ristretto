<%- content_for :tabs do -%>
  <%= tab 'New user', new_user_path(@user) if can? :create, @user %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb 'Users', users_path if can? :index, User %>
<% end %>

<% title "Users" -%>
<div id="users" class="users panel">
  <h3 class="title">Users</h3>
  <div class="content">
    <table class="users">
      <thead>
        <tr>
          <th>Gravatar</th>
          <th>Name</th>
          <% if current_user.is_staff? %>
          <th>Email</th>
          <th class="show">Show</th>
          <th class="edit">Edit</th>
          <th class="delete">Delete</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% for user in @users %>
        <tr>
          <td><%= gravatar(user,40) %></td>
          <td><%=h user.full_name %></td>
          <% if current_user.is_staff? %>
          <td><%=h user.email %></td>
          <td class="show"><%= show_link user, 'Show' %></td>
          <td class="edit"><%= edit_link user, 'Edit' %></td>
          <td class="delete"><%= delete_link user, 'Delete' %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="panel-footer">
    <%= will_paginate @users %>
  </div>
</div>
