<%- content_for :tabs do -%>
  <%= tab 'Edit', edit_stakeholder_path(@stakeholder) if can? :edit, @stakeholder %>
  <%= tab 'New stakeholder', new_project_stakeholder_path(@project) if can? :create, Stakeholder %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb @project.customer.name, @project.customer %>
  <%= crumb @project.name, @project %>
  <%= crumb @stakeholder.user.name, @stakeholder %>
<%- end -%>


<%= title "Are you sure you want to continue?" -%>
This will remove <strong><%=h @stakeholder.user %></strong> from the
project <strong><%=h @project %></strong>.
<% form_for @stakeholder, :html => {:method => 'delete'} do |f| %>
  <%= submit_tag 'Delete' %> or <%= link_to 'Cancel', request.referer || @stakeholder, {:class => 'cancel'} %>
<% end %>

