<%- content_for :tabs do -%>
  <%= tab 'New stakeholder', new_project_stakeholder_path(@project) %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb @project.customer.name, @project.customer %>
  <%= crumb @project.name, @project %>
  <%= crumb 'Stakeholders', project_stakeholders_path(@project) %>
<%- end -%>

<%= title "Stakeholders for '#{@project}'" %>

<table class="stakeholders">
  <thead>
  <tr>
    <th></th>
    <th>User</th>
    <th>Role</th>
    <th><%= image_tag('edit.png', :alt => "Edit") %></th>
    <th><%= image_tag('delete.png', :alt => "Delete") %></th>
  </tr>
  </thead>
  <tbody>
<% for stakeholder in @stakeholders %>
  <tr>
    <td><%= link_to gravatar(stakeholder.user,40), stakeholder.user %></td>
    <td><%= link_to stakeholder.user, stakeholder.user %></td>
    <td><%=h stakeholder.role.humanize %></td>
    <td><%= edit_link stakeholder %></td>
    <td><%= delete_link stakeholder %></td>
  </tr>
<% end %>
  </tbody>
</table>
