<%- content_for :tabs do -%>
  <%= tab 'View', @stakeholder if can? :show, @stakeholder %>
  <%= tab 'New stakeholder', new_project_stakeholder_path(@project) %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb @project.customer.name, @project.customer %>
  <%= crumb @project.name, @project %>
  <%= crumb @stakeholder.user.name, @stakeholder %>
<%- end -%>

<%= title "Editing stakeholder" %>

<% form_for @stakeholder do |form| %>
  <%= render :partial => form, :locals => {:form => form, :stakeholder => @stakeholder} %>
<% end %>
