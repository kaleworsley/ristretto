<%- content_for :tabs do -%>
  <%= tab 'Customers', customers_path, true %>
  <%= tab 'New Customer', new_customer_path %>
  <%= tab 'Missing Customers', missing_customers_path %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb 'Customers', customers_path %>
<%- end -%>

<%= title "Customers" -%>

<% javascript 'customers' %>

<table id="customers" class="customers bordered-table zebra-striped">
  <thead>
    <tr><th>Customer</th><th>Details</th></tr>
  </thead>
  <tbody>
  <%= render @customers %>
  </tbody>
</table>
<%= will_paginate @customers %>
