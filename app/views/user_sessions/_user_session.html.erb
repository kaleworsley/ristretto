<% form_for @user_session do |form| %>
<% flash[:error] = form.error_messages %>
<%= hidden_field_tag 'redirect', @redirect %>
<div class="form-item form-item-block">
  <%= form.label :email %>
  <%= form.text_field :email %>
</div>
<div class="form-item form-item-block">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<div class="form-item form-item-block">
  <%= form.label :remember_me %>
  <%= form.check_box :remember_me %>
</div>
<div class="form-item form-item-block">
  <%= form.submit "Login" %>
</div>
<%- end -%>
