<%- content_for :breadcrumbs do -%>
  <%= crumb @task.project.customer.name, @task.project.customer%>
  <%= crumb @task.project.name, @task.project %>
  <%= crumb @task.name, @task %>
  <%= crumb 'New comment', new_task_comment_path(@task) %>
<%- end -%>


<%- content_for :tabs do -%>
  <%= tab 'Comments', task_comments_path(@task) if can? :index, Comment %>
<%- end -%>

<%= title "New comment" -%>

<% form_for [@task, @comment], :html => { :multipart => true } do |form| %>
  <%= render :partial => form, :locals => {:form => form, :comment => @comment, :attachment => @attachment} %>
<% end %>
