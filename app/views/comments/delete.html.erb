<%- content_for :breadcrumbs do -%>
  <%= crumb @comment.task.project.customer.name, @comment.task.project.customer %>
  <%= crumb @comment.task.project.name, @comment.task.project %>
  <%= crumb @comment.task.project.customer.name, @comment.task %>
  <%= crumb 'Delete', delete_comment_path(@comment) %>
<% end %>

<%- content_for :tabs do -%>
  <%= tab 'Edit', edit_comment_path(@comment) if can? :edit, @comment %>
  <%= tab 'View', @comment if can? :show, @comment%>
<% end %>

<%= title "Are you sure you want to continue?" -%>
This will delete comment #<%=@comment.id %>.
<% form_for @comment, :html => {:method => 'delete'} do |f| %>
  <%= submit_tag 'Delete' %> or <%= link_to 'Cancel', request.referer || @comment, {:class => 'cancel'} %>
<% end %>

