<%- content_for :breadcrumbs do -%>
  <%= crumb @comment.task.project.customer.name, @comment.task.project.customer %>
  <%= crumb @comment.task.project.name, @comment.task.project %>
  <%= crumb @comment.task.project.customer.name, @comment.task %>
  <%= crumb 'Edit', edit_comment_path(@comment) %>
<% end %>

<%- content_for :tabs do -%>
  <%= tab 'View', @comment if can? :show, @comment %>
<% end %>

<%= title "Editing comment" -%>
<% form_for @comment, :html => { :multipart => true } do |form| %>
  <%= render :partial => form, :locals => {:form => form, :comment => @comment, :attachment => @attachment} %>
<% end %>
