<%- content_for :breadcrumbs do -%>
  <%= crumb 'Customers', customers_path %>
  <%= crumb @attachment.project.customer.name, @attachment.project.customer %>
  <%= crumb 'Projects', customer_projects_path(@attachment.project.customer) %>
  <%= crumb @attachment.project.name, @attachment.project %>
  <%= crumb 'Files', project_attachments_path(@attachment.project) %>
<%- end -%>

<%- content_for :tabs do -%>
  <%= tab 'Show', project_path(@attachment.project) %>
  <%= tab 'Edit', edit_project_path(@attachment.project) %>
  <%= tab 'Delete', delete_project_path(@attachment.project) %>
  <% tab 'Tasks', project_tasks_path(@attachment.project) do %>
    <%= tab 'Tasks', project_tasks_path(@attachment.project) %>
    <li class="divider"></li>
    <%= tab 'New task', new_project_task_path(@attachment.project) %>
  <% end %>
  <% tab 'Time', time_project_path(@attachment.project) do %>
    <%= tab 'Uninvoiced', uninvoiced_project_path(@attachment.project) %>
  <% end %>
  <%= tab 'Files', project_attachments_path(@attachment.project), true %>
<%- end -%>


