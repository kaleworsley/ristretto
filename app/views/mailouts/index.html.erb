<% title 'Mailouts' %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'ui.multiselect' %>
<% end %>

<h2>Create a new mailout</h2>
<% form_for @mailout do |form| %>
  <% flash[:error] = form.error_messages :message => nil, :header_message => nil %>

  <div class="clearfix">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
  <div class="clearfix">
    <%= form.label :body %>
    <%= form.text_area :body, {:class => 'markdown'} %>
  </div>
  <div class="clearfix">
    <%= label_tag :send_to_all_users %>
    <%= check_box_tag :send_to_all_users %>
  </div>
  <div id="user_select_container" class="clearfix">
    <%= form.label :user_ids, "Users" %>
    <%= form.collection_select :user_ids, @users, :id, :for_select_box, {}, {:multiple => true, :class => 'multiple'}  %>
  </div>
  <div class="form-submit">
    <%= form.submit "Send" %>
  </div>
<% end %>
