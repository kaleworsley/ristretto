<%- content_for :tabs do -%>
  <%= tab 'Edit', edit_task_path(@task) %>
  <%= tab 'New timeslice', new_task_timeslice_path(@task) %>
  <%= tab 'New task', new_project_task_path(@project) %>
<% end %>

<%- content_for :breadcrumbs do -%>
  <%= crumb @customer.name, @customer %>
  <%= crumb @project.name, @project %>
  <%= crumb @task.name, @task %>
<%- end -%>

<%= title "Are you sure you want to continue?" -%>
This will delete <%= link_to @task.name, @task %>, and all of the associated timeslices.
<% form_for @task, :html => {:method => 'delete'} do |f| %>
  <%= f.submit 'Delete', :class => 'btn primary' %> or <%= link_to 'Cancel', request.referer || @task, :class => 'btn danger' %>
<% end %>

