<%- content_for :tabs do -%>
  <%= tab 'Tasks', tasks_path if can? :index, Task %>
<%- end -%>

<%- content_for :breadcrumbs do -%>
  <%= crumb @customer.name, @customer %>
  <%= crumb @project.name, @project %>
  <%= crumb 'New task', new_project_task_path(@project) %>
<%- end -%>

<%= title "New task" -%>

<% form_for [@project, @task], :html => { :multipart => true } do |form| %>
  <%= render :partial => form, :locals => {:task => @task} %>
<% end %>