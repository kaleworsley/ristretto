<%- content_for :tabs do -%>
  <%= tab 'View', @task %>
  <%= tab 'New timeslice', new_task_timeslice_path(@task) %>
  <%= tab 'New task', new_project_task_path(@project) %>
<% end %>

<%- content_for :breadcrumbs do -%>
  <%= crumb @customer.name, @customer %>
  <%= crumb @project.name, @project %>
  <%= crumb @task.name, @task %>
<%- end -%>

<%= title "Editing task" -%>

<% form_for @task, :html => { :multipart => true } do |form| %>
  <%= render :partial => form, :locals => {:task => @task, :project => @project, :attachment => @attachment} %>
<% end %>
