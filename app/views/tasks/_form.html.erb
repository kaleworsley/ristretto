
  <% flash[:error] = form.error_messages :message => nil, :header_message => nil %>

  <% unless task.new_record? %>
  <div class="clearfix">
    <%= form.label :project_id %>
    <div class="input">
    <%= form.collection_select :project_id, current_user.current_projects.sort_by(&:full_name), :id, :full_name %>
    </div>
  </div>
  <% end %>

  <div class="clearfix">
    <%= form.label :name %>
    <div class="input">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= form.label :stage %>
    <div class="input">
      <%= form.select :stage, Task.stages_for_select, { :include_blank => true } %>
    </div>
  </div>

  <div class="clearfix">
    <%= form.label :state %>
    <div class="input">
      <%= form.select :state, Task.states_for_select %>
    </div>
  </div>

  <div class="clearfix">
    <%= form.label :estimate %>
    <div class="input">
      <%= form.text_field :estimate, :size => 4 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Save", :class => 'btn primary' %>
  </div>
